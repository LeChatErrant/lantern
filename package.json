{
  "name": "@lechaterrant/lantern",
  "version": "1.0.0",
  "description": "Opinionated CLI to assist backend development",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "lantern": "bin/src/index.js"
  },
  "files": [
    "bin/**/*"
  ],
  "repository": {
    "url": "https://github.com/LeChatErrant/lantern"
  },
  "author": {
    "name": "LeChatErrant",
    "email": "guillaume.hector@epitech.eu",
    "url": "https://github.com/LeChatErrant/"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LeChatErrant/lantern/issues"
  },
  "homepage": "https://github.com/LeChatErrant/lantern#readme",
  "scripts": {
    "build": "tsc",
    "start": "node bin/src",
    "dev": "ts-node src",
    "install-locally": "npm run build && sudo npm install -g .",
    "lint": "eslint './src/**/*.{ts,tsx}' --fix",
    "lint:ci": "eslint './src/**/*.{ts,tsx}'",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "*.@(ts|js)": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@lechaterrant/lantern": "^1.0.0",
    "clear": "^0.1.0",
    "clui": "^0.3.6",
    "colors": "^1.4.0",
    "commander": "^8.3.0",
    "figlet": "^1.5.2",
    "inquirer": "^8.2.0",
    "npm": "7.9",
    "pluralize": "^8.0.0",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@types/clear": "^0.1.2",
    "@types/clui": "^0.3.1",
    "@types/figlet": "^1.5.4",
    "@types/inquirer": "^8.1.3",
    "@types/node": "^17.0.10",
    "@types/npm": "^7.19.0",
    "@types/pluralize": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-typescript": "^14.0.2",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.0",
    "lint-staged": "^12.2.0",
    "ts-node": "^10.4.0"
  }
}
